{
  "name": "@sveltia/cms",
  "version": "0.80.3",
  "description": "Sveltia CMS is a modern, lightweight, Git-based headless content management system.",
  "keywords": [
    "cms",
    "content-management-system"
  ],
  "repository": {
    "type": "git",
    "url": "github:sveltia/sveltia-cms"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:watch": "vite build --watch",
    "check": "pnpm run '/^check:.*/'",
    "check:audit": "pnpm audit",
    "check:cspell": "cspell --no-progress",
    "check:eslint": "eslint .",
    "check:imports": "node scripts/find-unused-imports.js",
    "check:prettier": "prettier --check .",
    "check:stylelint": "stylelint '**/*.{css,scss,svelte}'",
    "check:svelte": "svelte-check",
    "dev": "vite",
    "format": "prettier --write .",
    "prepublishOnly": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@jsquash/webp": "^1.5.0",
    "@lexical/markdown": "^0.32.1",
    "@sindresorhus/transliterate": "^1.6.0",
    "@sveltia/ui": "^0.26.10",
    "@sveltia/utils": "^0.8.0",
    "deepmerge": "^4.3.1",
    "fast-deep-equal": "^3.1.3",
    "flat": "^6.0.1",
    "isomorphic-dompurify": "^2.25.0",
    "lexical": "^0.32.1",
    "marked": "^15.0.12",
    "marked-bidi": "^1.0.12",
    "mime": "^4.0.7",
    "moment": "^2.30.1",
    "parse-entities": "^4.0.2",
    "pdfjs-dist": "^5.3.31",
    "qrcode": "^1.5.4",
    "sanitize-filename": "^1.6.3",
    "smol-toml": "^1.3.4",
    "svgo": "^3.3.2",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "5.1.0",
    "@types/node": "^24.0.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.1.7",
    "@vitest/coverage-v8": "3.2.3",
    "cspell": "^9.0.2",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.7.1",
    "eslint-plugin-package-json": "^0.35.1",
    "eslint-plugin-svelte": "^2.46.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jsonc-eslint-parser": "^2.4.0",
    "postcss": "^8.5.4",
    "postcss-html": "^1.8.0",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.4.0",
    "sass": "^1.89.2",
    "stylelint": "^16.20.0",
    "stylelint-config-recommended-scss": "^15.0.1",
    "stylelint-scss": "^6.12.1",
    "svelte": "5.33.19",
    "svelte-check": "^4.2.1",
    "svelte-i18n": "^4.0.1",
    "svelte-preprocess": "^6.0.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  },
  "publishConfig": {
    "directory": "package",
    "access": "public",
    "provenance": true
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "svelte-preprocess"
    ],
    "auditConfig": {
      "ignoreCves": [
        "CVE-2025-5889"
      ]
    }
  }
}
